<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PixabayPhotoViewer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Background and text colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

    </style>

    <style name="Theme.PixabayPhotoViewer" parent="Base.Theme.PixabayPhotoViewer" />

    <!-- Home and  Image Detail Screen  -->
    <style name="Theme.PixabayPhotoViewer.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Disable default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Background and text colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!--  Home card     -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>

        <item name="popupTheme">@style/PopupTheme</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="popupMenuBackground">@color/surface</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/dividerColor</item>
    </style>


</resources>